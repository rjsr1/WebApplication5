@model WebApplication5.Models.User

@{
    ViewBag.Title = "FilePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="content-block" style="align-items:center">
        <div>
            <h3 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Lista de Arquivos</h3>
        </div>
        <table class="table-hover" style="font-size:large;margin:auto;table-layout:auto;width:40%;height:60%">
            <thead>
                <tr>
                    <th style="text-align:initial">File Name</th>
                    <th style="text-align:initial">Link</th>
                </tr>
                <tr>
                </tr>
            </thead>
            <tbody>
            @foreach (var arquivo in ViewBag.arquivos)
            {
                <tr>
                    <td style="text-align:initial;margin:auto">
                        @arquivo
                    </td>
                    <td style="text-align:initial;margin:auto">
                        @Html.ActionLink("Download", "Download", new { Arquivo = arquivo }, "Arquivo")
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <btn>@Html.ActionLink("Alterar Diretorio de Arquivos","AlterarPath")</btn>
    </div>
</body>
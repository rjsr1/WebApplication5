@model WebApplication5.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login falhou. Verifique suas credenciais");
    <div style="align-content:center;position:center">
        <div>
            <fieldset style="position:center;text-align:center">
                <legend style="color:red">Login</legend>
                <div class="editor-label">
                    @Html.Label("Usuário")
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(u => u.UserName)
                    @Html.ValidationMessageFor(u => u.UserName)
                </div>
                <div class="editor-label">
                    @Html.Label("Senha")
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(u => u.Password)
                    @Html.ValidationMessageFor(u => u.Password)
                </div>
                <br/>

                <input type="submit" value="Log In" />
            </fieldset>
        </div>
    </div>
}